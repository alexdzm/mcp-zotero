"mcpServers": {
    "zotero": {
      "command": "uv",
      "args": [
        "--directory",
        "PATH TO THIS DIR",
        "run",
        "src/server.py"
      ],
      "env": {
        "ZOTERO_API_KEY": ,
        "ZOTERO_USER_ID": 
      }
    },
    "arxiv-mcp-server": {
            "command": "uv",
            "args": [
              "--directory",
              "PATH TO THIS DIR/arxiv-mcp-server",
              "run",
              "arxiv-mcp-server",
              "--storage-path", "PATH TO PAPERS DIR"
          ]
        }
  }
}